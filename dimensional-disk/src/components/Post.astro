---
const { title, desc, imgsrc } = Astro.props;
---

<article id="article-container">
    <img src={imgsrc} alt="image placeholder" height=50 width=50>
    <section id="text-section">
        <h1>{title}</h1>
        <p>{desc}</p>
    </section>
</article>

<style>
    #article-container {
        display: flex;
        flex-direction: row;
        height: 20vh;
        margin: 1rem 0;
        border: 1px solid black;
        column-gap: 1rem;
    }

	#text-section {
        display: flex;
        flex-direction: column;
    }

    img {
        height: 100%;
        width: auto;
    }
</style>
